{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["@playwright/test"],
    "importHelpers": true,
    "module": "ESNext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ESNext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "dom"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts" // Ensure test files are included for TypeScript compilation
  ]
}